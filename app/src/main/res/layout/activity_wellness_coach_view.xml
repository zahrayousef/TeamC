                android:textColor="@android:color/holo_red_light"
                android:layout_below="@id/seekBar4"
                android:layout_alignParentStart="true"
                android:text="Bad"
                android:shadowColor="#a7000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4"
                android:layout_width="wrap_content"
